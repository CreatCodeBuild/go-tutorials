type Mutation {
    question: QuestionMutation!
    answer: AnswerMutation!
}

type QuestionMutation {
    create(
        title: String!,
        content: String!
    ): Question!
    update(
        id: ID!,
        title: String,
        content: String
    ): Question!
}

type AnswerMutation {
    create(
        questionID: Int!
        content: String!
    ): Answer!
}
